<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-auth-message alert-<%= name.to_s == 'notice' || name.to_s == 'success' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= content_tag :div, msg.to_s.html_safe, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
<script type="text/javascript">
  $(".alert.alert-auth-message").css("font-family", "Proxima_Nova_Light");
  $('.alert.alert-auth-message').alert();
  $(".alert.alert-auth-message").fadeTo(5000, 800).slideUp(800, function(){
    $(".alert.alert-auth-message").alert('close');
  });
</script>
