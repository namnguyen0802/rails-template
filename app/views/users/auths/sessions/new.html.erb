<div class="sign_up_form">
  <div class="container">
    <div class="col-lg-5 col-md-7 col-12 m-auto">
      <div class="card">
        <div class="card-body pt-5 px-4 mx-2">
          <h3 class="text-fill-info font-weight-normal pb-3">Fill in the information below</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn-regis w-100 pl-0", id: "button-submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
